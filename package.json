{
  "name": "specapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "dependencies": {
    "recharts": "^3.5.1",
    "uuid": "^13.0.0",
    "react-dom": "^19.2.1",
    "lucide-react": "^0.559.0",
    "react": "^19.2.1",
    "@google/genai": "^1.32.0",
    "three": "0.160.0"
    ,"electron-store": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^1.0.0",
    "jsdom": "^21.1.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "electron:dev": "cross-env ELECTRON_ENABLE_LOGGING=true ELECTRON_ENABLE_STACK_DUMPING=true ELECTRON_START_URL=http://localhost:3000 concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:dev:debug": "cross-env ELECTRON_ENABLE_LOGGING=true ELECTRON_ENABLE_STACK_DUMPING=true ELECTRON_ENABLE_STACK_TRACING=true ELECTRON_START_URL=http://localhost:3000 concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder",
    "build:installer": "npm run build && electron-builder --publish never",
    "start:electron": "electron .",
    "start:prod": "npm run build && electron ."
  },
  "build": {
    "appId": "com.brettadin.spectrascope",
    "productName": "SpectraScope",
    "directories": { "output": "dist_electron" },
    "files": ["dist/**", "electron/**", "services/**", "package.json"],
    "win": { "target": ["nsis"] },
    "mac": { "target": ["dmg"] },
    "linux": { "target": ["AppImage"] }
  }
}
